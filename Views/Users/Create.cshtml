@{
    Layout = "~/Views/Shared/_allStatic.cshtml";
}

@model Blogger.Models.User

<form asp-controller="users" asp-action="create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name">
    </div>

    <div class="form-group">
        <label asp-for="Username"></label>
        <input class="form-control" asp-for="Username">
    </div>

    <div class="form-group">
        <label asp-for="UserPosition"></label>
        <select class="form-control" asp-for="UserPosition" 
            asp-items="Html.GetEnumSelectList<Position>()"></select>
    </div>

    <div class="form-group">
        <button class="btn btn-success" type="Submit">Submit</button>
    </div>
</form>